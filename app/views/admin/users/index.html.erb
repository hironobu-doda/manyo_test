<h1>ユーザー一覧（管理者用）</h1>

<%= link_to '新規登録', new_admin_user_path, class: 'btn btn-primary' %>
<%= link_to 'ラベル一覧画面（管理者用）', labels_path %>


<table>
  <tr>
    <th>名前</th>
    <th>メール</th>
    <th>管理者</th>
    <th>id</th>
    <th>投稿数</th>
    <th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.admin? ? 'はい' : 'いいえ' %></td>
      <td>[<%= user.id %>]</td>
      <td>{<%= user.tasks.count %>}</td>
      <td><%= link_to '詳細を確認する', admin_user_path(user.id) %></td>
      <td><%= link_to "ユーザーを編集する", edit_admin_user_path(user.id), data: { confirm: '本当に編集していいですか？' } %></td>
      <td><%= link_to 'ユーザーを削除する', admin_user_path(user.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
    </tr>
  <% end %>
</table>
